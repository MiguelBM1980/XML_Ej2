<!ELEMENT biblioteca (libros|revistas|periodicos)*>

        <!-- Estructura de los libros-->

        <!ELEMENT libros (libro)*>
        <!ELEMENT libro (titulo|capitulos|indice|sinopsis)*>
        <!ATTLIST libro
                id CDATA #REQUIRED
                no_paginas CDATA #REQUIRED
                tipo_clase CDATA #REQUIRED>
        <!ELEMENT titulo (#PCDATA)>
        <!ELEMENT capitulos (capitulo)*>
        <!ELEMENT capitulo (contenido)*>
        <!ATTLIST capitulo
                no_paginas CDATA #REQUIRED>
        <!ATTLIST contenido
                enlace CDATA #REQUIRED>
        <!ELEMENT sinopsis (#PCDATA)>

        <!-- Estructura de las revistas-->

        <!ELEMENT revistas (revista)*>
        <!ELEMENT revista (titulo|indice|numero|secciones)*>
        <!ATTLIST revista
                id CDATA #REQUIRED
                no_paginas CDATA #REQUIRED
                tipo_clase CDATA #REQUIRED>
        <!ELEMENT numero (#PCDATA)>
        <!ATTLIST seccion
                no_paginas CDATA #IMPLIED>

        <!-- Estructura de los periÃ³dicos-->
        <!ELEMENT periodicos (periodico)*>
        <!ELEMENT periodico (indice|secciones)*>
        <!ATTLIST periodico
                fecha_publicacion CDATA #REQUIRED
                id CDATA #REQUIRED
                tipo_clase CDATA #REQUIRED>
        <!ATTLIST seccion
                tipo_clase CDATA #IMPLIED>
        <!ELEMENT articulo (contenido)*>
        <!ATTLIST articulo
                autor CDATA #REQUIRED>
        <!ATTLIST contenido
                enlace CDATA #REQUIRED>

                <!-- Elementos comunes-->

                <!ELEMENT indice (#PCDATA)>
                <!ELEMENT seccion (contenido|articulo)*>
                <!ELEMENT secciones (seccion|articulo)*>
                <!ELEMENT contenido (#PCDATA)>
